{
  "kind": "collectionType",
  "collectionName": "subscriptions",
  "info": {
    "singularName": "subscription",
    "pluralName": "subscriptions",
    "displayName": "Subscription",
    "description": "Restaurant subscriptions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "restaurant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::restaurant.restaurant",
      "inversedBy": "subscription"
    },
    "plan": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subscription-plan.subscription-plan",
      "inversedBy": "subscriptions"
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "failed",
        "cancelled"
      ],
      "default": "pending",
      "required": true
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "paypal",
        "visa",
        "mastercard",
        "other"
      ],
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "renewalDate": {
      "type": "datetime",
      "required": true
    },
    "autoRenew": {
      "type": "boolean",
      "default": true
    },
    "paymentHistory": {
      "type": "json"
    },
    "invoiceNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "notes": {
      "type": "text"
    }
  }
}
